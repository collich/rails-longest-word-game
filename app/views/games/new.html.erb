<div class="container my-3">
  <h1>New Game</h1>
</div>

<div class="container d-flex">
  <% @letters.each do |letter| %>
  <p id="letter" class=" my-5 mx-3 border border-secondary"><%= letter.upcase %></p>
  <% end %>
</div>

<div class="container my-3">
  <p>What is the longest word you can think of?</p>
  <form action="<%= score_path %>" data-turbo="false">
    <input type="text" name="answer" class="w-100">
    <input type="submit" value="Play">
  </form>
</div>
